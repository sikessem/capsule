{
    "name": "sikessem/capsule",
    "description": "Capsule is designed to make it easier to manage dependencies and objects, while improving encapsulation and ensuring code quality.",
    "homepage": "https://packagist.org/packages/sikessem/capsule",
    "keywords": [
        "capsule",
        "encapsulation",
        "accessor",
        "mutator",
        "property",
        "getter",
        "setter",
        "method",
        "event",
        "di",
        "ioc",
        "dic",
        "container",
        "psr",
        "dependency-injection",
        "injector",
        "encapsulator",
        "psr11",
        "php"
    ],
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.1||^8.2",
        "psr/container": "^2.0"
    },
    "authors": [
        {
            "name": "SIGUI Kess√© Emmanuel",
            "email": "ske@sikessem.com",
            "homepage": "http://sikessem.com"
        }
    ],
    "require-dev": {
        "laravel/pint": "^1.3",
        "pestphp/pest": "^1.22",
        "phpstan/phpstan": "^1.9",
        "phpunit/phpunit": "^9.5",
        "rector/rector": "^0.15",
        "symfony/var-dumper": "^6.2",
        "vimeo/psalm": "^5.4"
    },
    "autoload": {
        "psr-4": {
            "Sikessem\\Capsule\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sikessem\\Capsule\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "init:shift": "rector init",
        "init:formats": "psalm --init",
        "init:unit": "pest --init",
        "fix:shift": "rector",
        "fix:lint": "pint -v",
        "fix:formats": "psalm --alter --issues=all --dry-run",
        "test:shift": "rector --dry-run",
        "test:lint": "pint --test -v",
        "test:types": "phpstan analyse --ansi --memory-limit=-1 --debug",
        "test:formats": "psalm --no-diff",
        "test:styles": [
            "@test:lint",
            "@test:types",
            "@test:formats"
        ],
        "test:unit": "pest --colors=always",
        "init:test": [
            "@init:shift",
            "@init:formats",
            "@init:unit"
        ],
        "test": [
            "@test:shift",
            "@test:styles",
            "@test:unit"
        ],
        "fix": [
            "@fix:lint",
            "@fix:formats",
            "@fix:shift"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-main": "0.x-dev"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
